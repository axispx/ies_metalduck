@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex justify-center w-full mt-16">
    <div class="w-1/3">
        <h1 class="text-2xl mb-2">@ViewData["Title"]</h1>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-lg mb-4">Create a new account.</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email" class="block">Email</label>
                <input asp-for="Input.Email" class="border border-primary/50 rounded w-full p-2 mt-2" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Password" class="block">Password</label>
                <input asp-for="Input.Password" class="border border-primary/50 rounded w-full p-2 mt-2" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.ConfirmPassword" class="block">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="border border-primary/50 rounded w-full p-2 mt-2" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="mt-6 bg-primary text-white px-6 py-2 rounded">Register</button>
            <div class="mt-8">
                <p>
                    <a id="login" asp-page="./Login" class="text-blue-600">Already a user?</a>
                </p>
            </div>
        </form>
    </div>
