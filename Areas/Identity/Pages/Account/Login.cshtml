@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="flex justify-center mt-16">
    <div class="w-1/3">
        <h1 class="text-2xl">@ViewData["Title"]</h1>
        <section class="mt-4">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="block">Email</label>
                    <input asp-for="Input.Email" class="border border-primary/50 rounded w-full p-2 mt-2" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-red-500"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Password" class="block">Password</label>
                    <input asp-for="Input.Password" class="border border-primary/50 rounded w-full p-2 mt-2" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="flex items-center gap-2">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="bg-primary text-white px-6 py-2 rounded">Log in</button>
                </div>
                <div class="mt-8">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-blue-600">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
